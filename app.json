{
  "name": "InChrist AI Twitter Bot",
  "description": "A Christian AI agent for Twitter/X that posts daily Bible verses and interacts with users",
  "image": "heroku/python",
  "repository": "https://github.com/your-username/InChristAI",
  "keywords": ["python", "twitter", "bot", "christian", "ai", "bible"],
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "env": {
    "TWITTER_API_KEY": {
      "description": "Twitter API Key from developer.twitter.com",
      "required": true
    },
    "TWITTER_API_SECRET": {
      "description": "Twitter API Secret from developer.twitter.com",
      "required": true
    },
    "TWITTER_ACCESS_TOKEN": {
      "description": "Twitter Access Token from developer.twitter.com",
      "required": true
    },
    "TWITTER_ACCESS_TOKEN_SECRET": {
      "description": "Twitter Access Token Secret from developer.twitter.com",
      "required": true
    },
    "TWITTER_BEARER_TOKEN": {
      "description": "Twitter Bearer Token from developer.twitter.com",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API Key from platform.openai.com",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Your Twitter bot's username",
      "value": "InChristAI",
      "required": false
    },
    "POSTING_TIME": {
      "description": "Daily posting time in 24-hour format (HH:MM)",
      "value": "08:00",
      "required": false
    },
    "TIMEZONE": {
      "description": "Timezone for scheduling (e.g., America/New_York)",
      "value": "America/New_York",
      "required": false
    },
    "AI_MODEL": {
      "description": "OpenAI model to use",
      "value": "gpt-3.5-turbo",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
